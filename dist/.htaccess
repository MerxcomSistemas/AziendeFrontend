# =============================================================================
# .htaccess para SPA (Single Page Application) con microservicios
# =============================================================================
# Estructura:
#   /                        → Host (Starterkit)
#   /designset/editor/*      → Editor microservicio
#   /designset/viewer/*      → Viewer microservicio
#   /designset/template_editor/* → Template Editor microservicio
# =============================================================================

# Habilitar el motor de reescritura
RewriteEngine On
RewriteBase /

# -----------------------------------------------------------------------------
# REGLA 1: Si es un archivo o directorio real, servirlo directamente
# -----------------------------------------------------------------------------
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# -----------------------------------------------------------------------------
# REGLA 2: Rutas de /designset/* → /designset/index.html
# (editor, viewer, template_editor, preview)
# -----------------------------------------------------------------------------
RewriteCond %{REQUEST_URI} ^/designset
RewriteRule ^ /designset/index.html [L]

# -----------------------------------------------------------------------------
# REGLA 3: Todas las demás rutas (Host) → /index.html
# -----------------------------------------------------------------------------
RewriteRule ^ /index.html [L]

# =============================================================================
# Configuraciones adicionales
# =============================================================================

# Tipos MIME
<IfModule mod_mime.c>
    AddType application/javascript .js .mjs
    AddType text/css .css
    AddType image/svg+xml .svg
    AddType application/json .json
</IfModule>

# Compresión GZIP
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/css
    AddOutputFilterByType DEFLATE application/javascript application/json
    AddOutputFilterByType DEFLATE image/svg+xml
</IfModule>

# Cache para assets estáticos
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/html "access plus 0 seconds"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
</IfModule>

# Prevenir listado de directorios
Options -Indexes

# Seguridad básica
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
</IfModule>
